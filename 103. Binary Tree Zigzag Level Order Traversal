class Solution {
public:
    vector<vector<int>> zigzagLevelOrder(TreeNode* root) {
        vector<vector<int>> ans;
        if(root==NULL){
            return ans;
        }
        queue<TreeNode*> q;
        q.push(root);
        bool leftToright = true;
        int index;
        while(!q.empty()){
            int size = q.size();
            vector<int> temp(size);
            
            for(int i=0;i<size;i++){
                TreeNode* node = q.front();
                q.pop();
                
                if(leftToright){
                    index=i;
                }else{
                    index=size-1-i;
                }
                
                temp[index]=node->val;
                
                if(node->left){
                    q.push(node->left);
                }
                
                if(node->right){
                    q.push(node->right);
                }
            }
            
            leftToright = !leftToright;
            ans.push_back(temp);
        }
        
        return ans;
    }
};
